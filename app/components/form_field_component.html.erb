<div>
  <div class="flex justify-between items-baseline mb-1">
    <%= @form.label @field_name, @label_text, class: "text-sm font-medium text-gray-700" %>
    <% if @hint %>
      <span class="text-xs text-gray-400"><%= @hint %></span>
    <% end %>
  </div>
  <% if @field_type == :select %>
    <%= @form.select @field_name, @options, {}, class: "mt-1 block w-full h-10 px-3 py-2 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
  <% else %>
    <%= @form.send(@field_type, @field_name, class: "mt-1 block w-full h-10 px-3 py-2 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm") %>
  <% end %>
  <%= render FieldErrorComponent.new(errors: field_errors) %>
</div>
