<div class="overflow-x-auto">
  <table class="w-full max-w-4xl divide-y divide-gray-200">
    <%= header %>
    <%= content_tag :tbody, class: "bg-white divide-y divide-gray-200", id: @tbody_id do %>
      <% if rows? %>
        <% rows.each do |row| %>
          <%= row %>
        <% end %>
      <% else %>
        <tr>
          <td colspan="100%" class="text-center py-8 text-gray-500">
            <%= @empty_message %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
