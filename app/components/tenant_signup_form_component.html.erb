<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6">テナント作成</h2>

  <%= form_with model: @form, url: tenants_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :tenant_name, "テナント名", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :tenant_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <% if @form.errors[:tenant_name].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @form.errors[:tenant_name].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :user_email, "管理者メールアドレス", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :user_email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <% if @form.errors[:user_email].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @form.errors[:user_email].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :user_password, "管理者パスワード", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :user_password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <% if @form.errors[:user_password].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @form.errors[:user_password].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :user_password_confirmation, "管理者パスワード確認", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :user_password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <% if @form.errors[:user_password_confirmation].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @form.errors[:user_password_confirmation].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.submit "テナントを作成", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
