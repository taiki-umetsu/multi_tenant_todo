<% if show_pagination? %>
  <div class="flex items-center gap-8">
    <nav class="isolate inline-flex space-x-3 rounded-md shadow-sm" aria-label="Pagination">
      <%= helpers.paginate @collection, params: pagination_params %>
    </nav>
    <div class="text-sm text-gray-500">
      <span class="font-medium"><%= @collection.offset_value + 1 %></span> - <span class="font-medium"><%= [@collection.offset_value + @collection.limit_value, @collection.total_count].min %></span> / <span class="font-medium"><%= @collection.total_count %></span>ä»¶
    </div>
  </div>
<% end %>
