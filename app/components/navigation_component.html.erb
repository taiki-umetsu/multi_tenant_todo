<!-- Desktop Navigation -->
<nav class="bg-white shadow-md border-b border-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <%= link_to root_path, class: "text-2xl font-bold text-indigo-600 hover:text-indigo-700" do %>
          Multi Tenant Todo
        <% end %>
      </div>

      <div class="flex items-center space-x-4">
        <% if logged_in? %>
          <div class="flex items-center space-x-6">
            <% if @current_user.admin? %>
              <%= link_to "ユーザー管理", admin_users_path,
                  class: "px-3 py-2 rounded-md text-sm font-medium text-indigo-600 hover:text-indigo-700 hover:bg-indigo-50" %>
            <% end %>
            <div class="text-sm">
              <div class="font-medium text-gray-900"><%= @current_tenant.name %></div>
              <div class="text-gray-600"><%= @current_user.email %></div>
            </div>
            <%= button_to "ログアウト", logout_path, method: :delete,
                class: "px-4 py-2 rounded-md text-sm font-medium text-gray-900 bg-white hover:bg-gray-50 border border-gray-300" %>
          </div>
        <% else %>
          <div class="flex items-center space-x-3">
            <%= link_to "ログイン", login_path,
                class: "px-4 py-2 text-sm" %>
            <%= link_to "テナント作成", new_tenant_path,
                class: "px-4 py-2 text-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
